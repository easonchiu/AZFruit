@charset "utf-8";

.view-address-detail {

	.form {
		label {
			display: block;
			width: 6em;
		}
		textarea {
			display: block;
			-webkit-box-flex: 1;
		}
	}

	.delete {
		color: #ff4949;
		display: block;
		height: 0.8rem;
		line-height: 0.8rem;
		&:active {
			opacity: 0.7;
		}
	}

	.defrow {
		label {
			-webkit-box-flex: 1;
		}
	}

	.footer {
		padding: 0.2rem 0.3rem;
	}
}

:global(.delete-address-alert) {
	:global(.x-alert__btn-y) {
		color: #ff4949 !important;
	}
}