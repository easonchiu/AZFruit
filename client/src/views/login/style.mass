@charset "utf-8";

.view-login {
	background: #fff;

	.body {
		padding: 0.4rem;
		padding-top: 1rem;
	}

	.logo {
		width: 2rem;
		height: 2rem;
		background: #f2f2f2;
		margin: 0 auto 1rem auto;
		text-align: center;
		line-height: 2rem;
		font-size: 0.4rem;
		color: #ccc;
	}

	.mobile {
		margin-bottom: 0.3rem;
		p {
			padding: 0 0.3rem;
			height: 100%;
			display: -webkit-box;
			-webkit-box-align: center;
		}
	}

	.code {
		margin-bottom: 0.6rem;
		p {
			padding: 0 0.3rem;
			height: 100%;
			display: -webkit-box;
			-webkit-box-align: center;
		}
	}

	.code-btn {
		width: 7em;
		display: -webkit-box;
		-webkit-box-align: center;
		-webkit-box-pack: center;
		height: 100%;
		font-size: 0.26rem;
		color: #00bb44;
		&:active {
			opacity: 0.6;
		}
	}

	.button {
		height: 1rem;
		font-size: 0.32rem;
	}
}